.info
  display block
  &__title
    displayFlex(center)
    fontStyle(100px, $font-family, $secondary-color)
  &__description
    displayFlex(center)
    margin-top -80px
    fontStyle(40px, $font-family, $secondary-color)

.icons
  displayFlex(center)
  .icon
    color $secondary-color
    width 25px
    transition width .2s linear .0s
    &:hover
      width 30px

@media (max-width 412px)
  .info__title
    fontStyle(70px, $font-family, $secondary-color)
  .info__description
    fontStyle(20px, $font-family, $secondary-color)
    margin-top  -30px
