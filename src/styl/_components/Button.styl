.group-buttons
  display block
  margin-left 34%

  &__btn
    width 130px
    height 50px
    margin 5px
    border 1.3px solid #F5F5F5
    border-radius 5px
    color $secondary-color
    background-color transparent
    font-size 30px
    transition box-shadow .1s linear .1s
    &:hover
      box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.5);
